// 背景图片
bg-image($url)
  background-image url($url + "@2x.png")
  @media (-webkit-min-device-pixel-radio: 3),(min-device-pixel-radio: 3)
    background-image url($url + "@2x.png");

// 文字不换行
no-wrap()
  overflow hidden
  text-overflow ellipsis
  white-space nowrap

// 扩展点击位置
extend-click()
  position relative
  &:before
    content ""
    position absolute
    top -10px
    left -10px
    right -10px
    bottom -10px
